@model LoginModel

<div class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header text-center">
                Üyelik Girişi
            </div>
            <div class="card-body">
                <form asp-action="Login" asp-controller="Account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-floating mb-3">
                        <input asp-for="Email" value="@Model.Email" type="email" class="form-control" id="Email" placeholder=".">
                        <label asp-for="Email" value="@Model.Email">E-mail</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Password" value="@Model.Password" type="password" class="form-control" id="Password" placeholder=".">
                        <label asp-for="Password" value="@Model.Password">Parola</label>
                    </div>
                    <div class="form-check form-switch">
                        <input asp-for="RememberMe" value="true" class="form-check-input" type="checkbox" role="switch" id="RememberMe" checked>
                        <input type="hidden" value="false" name="Remember" />
                        <label class="form-check-label" asp-for="RememberMe">Beni Hatırla?</label>
                    </div>       
                    <div class="form-group row">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-outline-primary w-100">Giriş</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">

    </div>
</div>